<p id="notice"><%= notice %></p>

<h1>Booking Requests</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @booking_requests.each do |booking_request| %>
      <tr>
        <td><%= booking_request.user %></td>
        <td><%= link_to 'Show', booking_request %></td>
        <td><%= link_to 'Edit', edit_booking_request_path(booking_request) %></td>
        <td><%= link_to 'Destroy', booking_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

